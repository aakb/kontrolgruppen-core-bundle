{% block economy_entry_base_table %}
    <div class="table-responsive">
        <table class="table table-striped table-hover table-borderless thead-light">
            <thead>
            <tr>
                <th>{{ 'economy.table.service.service'|trans }}</th>
                <th>{{ 'economy.table.service.period'|trans }}</th>
                <th>{{ 'economy.table.service.repayment_amount'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for economyEntry in economyEntries %}
                <tr>
                    <td>{{ economyEntry.service }}</td>
                    <td>{{ economyEntry.periodFrom|date("M. Y") }} - {{ economyEntry.periodTo|date("M. Y") }}</td>
                    <td>{{ economyEntry.repaymentAmount }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">{{ 'common.no_records_found'|trans }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
