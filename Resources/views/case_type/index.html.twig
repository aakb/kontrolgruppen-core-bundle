{% extends 'main/index.html.twig' %}

{% block title %}{{ 'case_type.index.title'|trans }}{% endblock %}

{% block content %}
    <h1>{{ 'case_type.index.title'|trans }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{ 'case_type.table.id'|trans }}</th>
                <th>{{ 'case_type.table.name'|trans }}</th>
                <th>{{ 'common.table.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for case_type in case_types %}
            <tr>
                <td>{{ case_type.id }}</td>
                <td>{{ case_type.name }}</td>
                <td>
                    <a href="{{ path('case_type_show', {'id': case_type.id}) }}">{{ 'common.actions.show'|trans }}</a>
                    <a href="{{ path('case_type_edit', {'id': case_type.id}) }}">{{ 'common.actions.edit'|trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">{{ 'common.no_records_found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('case_type_new') }}">{{ 'common.actions.create'|trans }}</a>
{% endblock %}
