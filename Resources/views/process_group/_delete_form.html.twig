<form method="post" action="{{ path('process_group_delete', {'id': process_group.id, 'process': process}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ process_group.id) }}">
    <button class="btn btn-danger">Delete</button>
</form>
