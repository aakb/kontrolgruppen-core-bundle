{% extends 'main/index.html.twig' %}

{% block title %}{{ 'process_type.index.title'|trans }}{% endblock %}

{% block content %}
    <h1>{{ 'process_type.index.title'|trans }}</h1>

    <div class="table-responsive">
        <table class="table table-striped table-hover table-borderless thead-light">
            <thead>
                <tr>
                    <th>{{ 'process_type.table.id'|trans }}</th>
                    <th>{{ 'process_type.table.name'|trans }}</th>
                    <th>{{ 'process_type.table.process_statuses'|trans }}</th>
                    <th>{{ 'common.table.actions'|trans }}</th>
                </tr>
            </thead>
            <tbody>
            {% for process_type in process_types %}
                <tr>
                    <td>{{ process_type.id }}</td>
                    <td>{{ process_type.name }}</td>
                    <td>
                        {% for processStatus in process_type.processStatuses %}
                        {{ processStatus }}{% if not loop.last %}, {% endif %}
                        {% endfor %}
                    </td>
                    <td>
                        <a href="{{ path('process_type_show', {'id': process_type.id}) }}">{{ 'common.actions.show'|trans }}</a>
                        <a href="{{ path('process_type_edit', {'id': process_type.id}) }}">{{ 'common.actions.edit'|trans }}</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">{{ 'common.no_records_found'|trans }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <a href="{{ path('process_type_new') }}">{{ 'common.actions.create'|trans }}</a>
{% endblock %}
