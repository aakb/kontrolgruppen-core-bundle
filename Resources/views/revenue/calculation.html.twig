<div id="empty-period-error-message" data-message="{{ 'economy.table.revenue.missing_period'|trans }}"

<div class="table-responsive">
    <div class="float-right">
        <i id="revenue-table-save-success" class="fas {{ iconClass('complete') }} d-none"></i>
        <i id="revenue-table-save-fail" class="fas {{ iconClass('error') }} d-none"></i>
        <div id="revenue-table-spinner" class="spinner-border spinner-border-sm d-none" role="status">
            <span class="sr-only">Loading...</span>
        </div>
        <button id="save-revenue-calculation-button" type="button" class="btn btn-success">{{ 'economy.table.revenue.save'|trans }}</button>
    </div>
    <table id="revenue-calculation-table" class="table table-striped table-hover table-borderless thead-light">
        <thead>
        <tr>
            <th>{{ 'economy.table.revenue.service'|trans }}</th>
            <th>{{ 'economy.table.revenue.future_savings_amount'|trans }}</th>
            <th>{{ 'economy.table.revenue.future_savings_period'|trans }}</th>
            <th>{{ 'economy.table.revenue.repayment_amount'|trans }}</th>
            <th class="text-right">{{ 'economy.table.revenue.repayment_period'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for revenueForm in revenueForms %}
            <tr>
            {{ form_start(revenueForm, {'attr': {'class': 'form-row'}}) }}
                <td>{{ form_widget(revenueForm.service) }}</td>
                <td>{{ form_widget(revenueForm.futureSavingsAmount) }}</td>
                <td>
                    <div class="form-control future-savings-period period-modal-trigger" data-target-input-from="#{{ revenueForm.futureSavingsPeriodFrom.vars.id }}" data-target-input-to="#{{ revenueForm.futureSavingsPeriodTo.vars.id }}">
                        {{ revenueForm.futureSavingsPeriodFrom.vars.value }}-{{ revenueForm.futureSavingsPeriodTo.vars.value }}
                    </div>
                </td>
                <td>{{ form_widget(revenueForm.repaymentAmount) }}</td>
                <td>
                    <div class="form-control repayment-period period-modal-trigger" data-target-input-from="#{{ revenueForm.repaymentPeriodFrom.vars.id }}" data-target-input-to="#{{ revenueForm.repaymentPeriodTo.vars.id }}">
                        {{ revenueForm.repaymentPeriodFrom.vars.value }}-{{ revenueForm.repaymentPeriodTo.vars.value }}
                    </div>
                </td>
            {{ form_end(revenueForm) }}
            </tr>
        {% else %}
            <tr>
                <td colspan="7">{{ 'common.no_records_found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% include '@KontrolgruppenCore/revenue/_period_modal.html.twig' %}

