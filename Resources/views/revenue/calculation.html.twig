<div id="empty-period-error-message" data-message="{{ 'economy.table.revenue.missing_period'|trans }}"></div>

<div id="revenue-calculation-table-success" class="alert alert-success d-none" role="alert">
    {{ 'economy.table.revenue.success'|trans }}
</div>

<div id="revenue-calculation-table-error" class="alert alert-danger d-none" role="alert">
    {{ 'economy.table.revenue.error'|trans }}
</div>

<div class="table-responsive">

    <table id="revenue-calculation-table" class="table table-striped table-hover table-borderless thead-light">
        <thead>
        <tr>
            <th class="w-20">{{ 'economy.table.revenue.service'|trans }}</th>
            <th colspan="2">{{ 'economy.table.revenue.future_savings_amount'|trans }}</th>
            <th colspan="2">{{ 'economy.table.revenue.repayment_amount'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for revenueForm in revenueForms %}
            <tr>
                {{ form_start(revenueForm, {'attr': {'class': 'form-row'}}) }}

                <td>{{ form_widget(revenueForm.service) }}</td>
                <td>{{ form_widget(revenueForm.futureSavingsAmount, {'attr': {'placeholder': 'economy.table.revenue.amount'|trans }}) }}</td>
                <td>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><span class="fa {{ iconClass('calendar') }} fa-sm" aria-hidden="true"></span></div>
                        </div>
                        <div class="form-control period-modal-trigger text-truncate future-savings-period" data-amount-input="#{{ revenueForm.futureSavingsAmount.vars.id }}" data-target-input-from="#{{ revenueForm.futureSavingsPeriodFrom.vars.id }}" data-target-input-to="#{{ revenueForm.futureSavingsPeriodTo.vars.id }}">
                            {{ revenueForm.futureSavingsPeriodFrom.vars.value }}-{{ revenueForm.futureSavingsPeriodTo.vars.value }}
                        </div>
                    </div>
                </td>
                <td>{{ form_widget(revenueForm.repaymentAmount, {'attr': {'placeholder': 'economy.table.revenue.amount'|trans }}) }}</td>
                <td>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><span class="fa {{ iconClass('calendar') }} fa-sm" aria-hidden="true"></span></div>
                        </div>
                        <div class="form-control period-modal-trigger text-truncate repayment-period" data-amount-input="#{{ revenueForm.repaymentAmount.vars.id }}" data-target-input-from="#{{ revenueForm.repaymentPeriodFrom.vars.id }}" data-target-input-to="#{{ revenueForm.repaymentPeriodTo.vars.id }}">
                            {{ revenueForm.repaymentPeriodFrom.vars.value }}-{{ revenueForm.repaymentPeriodTo.vars.value }}
                        </div>
                    </div>
                </td>
            {{ form_end(revenueForm) }}
            </tr>
        {% else %}
            <tr>
                <td colspan="7">{{ 'common.no_records_found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="float-right">

        <button id="save-revenue-calculation-button" type="button" class="btn btn-primary">
            <i id="revenue-table-save-success" class="fas {{ iconClass('complete') }} d-none"></i>
            <i id="revenue-table-save-fail" class="fas {{ iconClass('error') }} d-none"></i>
            <span id="revenue-table-spinner" class="spinner-border spinner-border-sm d-none mr-3" role="status">
                <span class="sr-only">Loading...</span>
            </span>
            {{ 'economy.table.revenue.save'|trans }}
        </button>
    </div>
</div>

{% include '@KontrolgruppenCore/revenue/_period_modal.html.twig' %}

