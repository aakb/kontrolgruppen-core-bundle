{% extends 'main/index.html.twig' %}

{% block title %}{{ 'reminder.show.title'|trans }}{% endblock %}

{% block content %}
    <h1>{{ 'reminder.show.title'|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'reminder.table.id'|trans }}</th>
                <td>{{ reminder.id }}</td>
            </tr>
            <tr>
                <th>{{ 'reminder.table.message'|trans }}</th>
                <td>{{ reminder.message }}</td>
            </tr>
            <tr>
                <th>{{ 'reminder.table.date'|trans }}</th>
                <td>{{ reminder.date ? reminder.date|date('d/m Y H:i') : '' }}</td>
            </tr>
            <tr>
                <th>{{ 'reminder.table.finished'|trans }}</th>
                <td>{{ (reminder.finished ? 'common.boolean.true' : 'common.boolean.false')|trans }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('reminder_index', {'process': process.id}) }}">{{ 'common.back_to_list'|trans }}</a>

    <a href="{{ path('reminder_edit', {'id': reminder.id, 'process': process.id}) }}">{{ 'common.actions.edit'|trans }}</a>

    {{ include('reminder/_delete_form.html.twig') }}
{% endblock %}
