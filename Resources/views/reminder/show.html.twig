{% extends 'main/index.html.twig' %}

{% block title %}{{ 'reminder.show.title'|trans }}{% endblock %}

{% block content %}
    <p class="lead">{{ 'reminder.show.title'|trans }}</p>
    <h1>{{ reminder.message }}</h1>
    <div class="table-responsive">
        <table class="table table-sm table-striped table-hover table-borderless thead-light">
            <tbody>
                <tr>
                    <th>{{ 'reminder.table.id'|trans }}</th>
                    <td>{{ reminder.id }}</td>
                </tr>
                <tr>
                    <th>{{ 'reminder.table.date'|trans }}</th>
                    <td>{{ reminder.date ? reminder.date|date('d/m Y H:i') : '' }}</td>
                </tr>
                <tr>
                    <th>{{ 'reminder.table.finished'|trans }}</th>
                    <td>{{ (reminder.finished ? 'common.boolean.true' : 'common.boolean.false')|trans }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <a href="{{ path('reminder_index', {'process': process.id}) }}" class="btn btn-light float-left">{{ 'common.back_to_list'|trans }}</a>

    <a href="{{ path('reminder_edit', {'id': reminder.id, 'process': process.id}) }}" class="btn btn-primary float-right pr-5 pl-5">{{ 'common.actions.edit'|trans }}</a>

    {{ include('reminder/_delete_form.html.twig') }}
{% endblock %}
