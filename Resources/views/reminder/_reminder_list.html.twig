{% block reminder_list %}
  {% set max_iterations = limit is defined ? min(reminders|length, limit) : reminders|length %}

<table class="table">
  <thead>
  <tr>
    <th>{{ 'reminder.table.id'|trans }}</th>
    <th>{{ 'process.table.case_number'|trans }}</th>
    <th>{{ 'process.table.process_type'|trans }}</th>
    <th>{{ 'reminder.table.message'|trans }}</th>
    <th>{{ 'reminder.table.date'|trans }}</th>
    <th>{{ 'reminder.table.finished'|trans }}</th>
    <th>{{ 'common.table.actions'|trans }}</th>
  </tr>
  </thead>
  <tbody>
  {% for reminder in reminders|slice(0, max_iterations) %}
    <tr class="{% if not reminder.finished and reminder.date|date('Y-m-d') < "now"|date('Y-m-d') %}bg-warning{% endif %}">
      <td>{{ reminder.id }}</td>
      <td><a href="{{ path('process_show', {id: reminder.process.id}) }}">{{ reminder.process.caseNumber }}</a></td>
      <td>{{ reminder.process.processType }}</td>
      <td>{{ reminder.message }}</td>
      <td>{{ reminder.date ? reminder.date|date('Y-m-d H:i:s') : '' }}</td>
      <td>{{ (reminder.finished ? 'common.boolean.true' : 'common.boolean.false')|trans }}</td>
      <td>
        <a href="{{ path('reminder_show', {'id': reminder.id, 'process': reminder.process.id}) }}">show</a>
        <a href="{{ path('reminder_edit', {'id': reminder.id, 'process': reminder.process.id}) }}">edit</a>
      </td>
    </tr>
  {% else %}
    <tr>
      <td colspan="4">{{ 'common.no_records_found'|trans }}</td>
    </tr>
  {% endfor %}
  </tbody>
</table>
{% endblock %}
