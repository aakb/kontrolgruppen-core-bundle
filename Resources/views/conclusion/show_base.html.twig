{% extends '@KontrolgruppenCore/process/main.html.twig' %}

{% block title %}{{ 'conclusion.show.title'|trans }}{% endblock %}

{% block content %}
    <h1>{{ 'conclusion.show.title'|trans }}</h1>

    <div class="table-responsive">
        <table class="table table-striped table-hover table-borderless thead-light">
            <tbody>
                <tr>
                    <th>{{ 'conclusion.table.id'|trans }}</th>
                    <td>{{ conclusion.id }}</td>
                </tr>
                <tr>
                    <th>{{ 'conclusion.table.conclusion'|trans }}</th>
                    <td>{{ conclusion.conclusion|raw }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <a href="{{ path('conclusion_edit', {'process': process.id}) }}" class="btn btn-primary float-right pl-5 pr-5">{{ 'common.actions.edit'|trans }}</a>
{% endblock %}
