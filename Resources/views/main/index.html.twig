{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
  <nav class="navbar navbar-dark fixed-top bg-dark flex-md-nowrap p-0 shadow">
    <a class="navbar-brand col-sm-3 col-md-2 mr-0" href="/">{{ 'common.title'|trans }}</a>
    {% block navigation_main %}
      <input class="form-control form-control-dark w-50" type="text" placeholder="{{ 'navigation.main.search'|trans }}"
             aria-label="{{ 'navigation.main.search'|trans }}">

      <div class="dropdown w-auto">
        <button type="button" class="btn btn-secondary btn-sm dropdown-toggle" data-toggle="dropdown">
          {{ 'navigation.main.quick_links'|trans }}
        </button>
        <div class="dropdown-menu">
          {% for quickLink in quickLinks %}
            <a class="dropdown-item" href="{{ quickLink.href }}" target="_blank">{{ quickLink.name }}</a>
          {% endfor %}
        </div>
      </div>

      <a class="btn btn-info btn-sm w-auto" href="{{ path('process_new') }}" role="button">{{ 'navigation.main.new_process'|trans }}</a>

      <ul class="navbar-nav px-3 w-auto">
        <li class="nav-item text-nowrap">
          <a class="nav-link" href="{{ path('fos_user_security_logout') }}">{{ 'navigation.main.sign_out'|trans }}</a>
        </li>
      </ul>
    {% endblock %}
  </nav>

  <div class="container-fluid">
    <div class="row">
      <nav class="col-md-2 d-none d-md-block bg-light sidebar">
        <div class="sidebar-sticky">
          {% block navigation_sidebar %}
          <ul class="nav flex-column">
            {% for menuItem in menuItems %}
            <li class="nav-item">
              <a class="nav-link{{ menuItem.active ? ' active' : '' }}" href="{{ menuItem.path }}">
                <span data-feather="home"></span>
                {{ menuItem.name }} <span class="sr-only">(current)</span>
              </a>
            </li>
            {% endfor %}
          </ul>
          {% endblock %}
        </div>
      </nav>

      <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
          <div class="row">
            <div class="col">
              {% block content %}
              {% endblock %}
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>
{% endblock %}
