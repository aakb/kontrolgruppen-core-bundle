{% extends '@KontrolgruppenCore/process/main.html.twig' %}

{% block title %}{{ 'economy_entry.edit.title'|trans }}{% endblock %}

{% block content %}
    <h1>{{ 'economy_entry.edit.title'|trans }}</h1>

    {{ include('@KontrolgruppenCore/economy_entry/_form.html.twig', {'button_label': 'Update'}) }}

    {{ include('@KontrolgruppenCore/economy_entry/_delete_form.html.twig') }}

    <a href="{{ path('economy_show', {'process': process}) }}" class="btn btn-light float-left">{{ 'common.back_to_list'|trans }}</a>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">
        $(document).ready(function () {
            $('.js-itkdev-monthpicker').monthpicker($('.js-monthpicker-from'), $('.js-monthpicker-to'), {
                headline: "{{ 'economy_entry.form.service.monthpicker_headline'|trans }}",
                applyButtonText: "{{ 'economy_entry.form.service.monthpicker_applybutton_text'|trans }}",
                cancelButtonText: "{{ 'economy_entry.form.service.monthpicker_cancelbutton_text'|trans }}"
            });
        });

        // Apply datetimepicker to all js-datepicker elements.
        $('.js-datepicker').datetimepicker({
            format: 'DD/MM YYYY'
        });
    </script>
{% endblock %}
