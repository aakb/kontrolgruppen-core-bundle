{% block economy_entry_base_table %}
    <div class="table-responsive">
        <table class="table table-striped table-hover table-borderless thead-light">
            <thead>
            <tr>
                <th>{{ 'economy.table.service.service'|trans }}</th>
                <th>{{ 'economy.table.service.period_from'|trans }}</th>
                <th>{{ 'economy.table.service.period_to'|trans }}</th>
                <th>{{ 'economy.table.service.amount_period'|trans }}</th>
                <th>{{ 'economy.table.service.amount'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for economyEntry in economyEntries %}
                <tr>
                    <td>{{ economyEntry.service }}</td>
                    <td>{{ economyEntry.periodFrom|date('d/m Y') }}</td>
                    <td>{{ economyEntry.periodTo|date('d/m Y') }}</td>
                    <td>{{ economyEntry.amountPeriod }}</td>
                    <td>{{ economyEntry.amount }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">{{ 'common.no_records_found'|trans }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
