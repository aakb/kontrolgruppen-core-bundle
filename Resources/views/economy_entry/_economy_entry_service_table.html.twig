{% block economy_entry_base_table %}
    <div class="table-responsive">
        <table class="table table-striped table-hover table-borderless thead-light">
            <thead>
            <tr>
                <th>{{ 'economy.table.service.service'|trans }}</th>
                <th>{{ 'economy.table.service.period'|trans }}</th>
                <th>{{ 'economy.table.service.amount'|trans }}</th>
                <th class="w-20">{{ 'economy.table.service.amount_period'|trans }}</th>
                <th class="w-20 text-right">{{ 'economy.table.service.repayment_amount'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for economyEntry in economyEntries %}
                <tr>
                    <td><a href="{{ path('economy_entry_edit', {'id': economyEntry.id, 'process': process}) }}">{{ economyEntry.service }}</a></td>
                    <td>{{ economyEntry.periodFrom|date('M. Y') }} - {{ economyEntry.periodTo|date('M. Y') }}</td>
                    <td>{{ economyEntry.amount|localizedcurrency('DKK') }}</td>
                    <td>{{ enumTranslation(economyEntry.amountPeriod, 'EconomyEntryAmountPeriodEnumType') }}</td>
                    <td class="w-20 text-right">{{ economyEntry.repaymentAmount|localizedcurrency('DKK') }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">{{ 'common.no_records_found'|trans }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
