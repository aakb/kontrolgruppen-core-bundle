<table>
    <thead>
        <tr>
            <th>{{ 'process_report.report.economy.base.text'|trans }}</th>
            <th>{{ 'process_report.report.economy.base.date'|trans }}</th>
            <th>{{ 'process_report.report.economy.base.amount'|trans }}</th>
        </tr>
    </thead>
    <tbody>
        {% for economyEntry in economyEntries %}
        <tr>
            <td>{{ economyEntry.text }}</td>
            <td>{{ economyEntry.date|localizeddate('short', 'none') }}</td>
            <td>{{ economyEntry.amount|localizedcurrency('DKK') }}</td>
        </tr>
        {% else %}
            <tr>
                <td colspan="3">{{ 'common.no_records_found'|trans }}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
