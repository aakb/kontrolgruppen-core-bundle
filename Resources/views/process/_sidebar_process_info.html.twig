<div class="mb-3">
    <div class="row">
        <div class="col">
            <div class="bg-light p-3">
                <div class="mb-3">
                    {% if process.clientCPR is defined %}
                        <span class="d-block"><span class="sr-only">{{ 'sidebar.client.cpr'|trans }}</span>{{ process.clientCPR }}</span>
                    {% endif %}
                    {% if process.client.firstName is not empty %}
                        <span class="d-block"><span
                                class="sr-only">{{ 'sidebar.client.name'|trans }}</span>{{ process.client.firstName }} {{ process.client.lastName }}</span>
                    {% endif %}
                </div>
                <div class="mb-3">
                    {% if process.client.address is not empty %}
                        <span class="d-block"><span
                                class="sr-only">{{ 'sidebar.client.address'|trans }}</span>{{ process.client.address }}, {{ process.client.postalCode }} {{ process.client.city }}</span>
                    {% endif %}
                    {% if process.client.telephone is defined %}
                        <span class="d-block"><span class="sr-only">{{ 'sidebar.client.telephone'|trans }}</span>{{ process.client.telephone }}</span>
                    {% endif %}
                </div>

                <div class="mb-3">
                    <h3>{{ 'sidebar.client.employment'|trans }}</h3>

                    {% if process.client.receivesPublicAid %}
                        <span class="d-block">{{ 'sidebar.client.receives_public_aid'|trans }}</span>
                    {% endif %}
                    {% if process.client.employed %}
                        <span class="d-block">{{ 'sidebar.client.employed'|trans }}</span>
                    {% endif %}
                    {% if process.client.hasOwnCompany %}
                        <span class="d-block">{{ 'sidebar.client.has_own_company'|trans }}</span>
                    {% endif %}
                </div>

                <div class="mb-3">
                    <h3>{{ 'sidebar.client.transport'|trans }}</h3>

                    {% if process.client.hasOwnCompany %}
                        <span class="d-block">{{ 'sidebar.client.has_drivers_license'|trans }}</span>
                    {% endif %}

                    {% if process.client.cars is defined %}
                        <span class="d-block"><span class="sr-only">{{ 'sidebar.client.cars'|trans }}</span>
                        {% for car in process.client.cars %}
                            <div>{{ car.registrationNumber }}{% if car.sharedOwnership %} ({{ 'sidebar.client.car_shared_ownership'|trans }}){% endif %}</div>
                        {% endfor %}
                    </span>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
