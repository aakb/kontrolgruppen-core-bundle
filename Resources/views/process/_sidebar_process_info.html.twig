<div class="mb-3">
  <div class="row">
    <div class="col">
      <div class="bg-light p-3">
        {% if process.clientCPR is defined %}
          <span class="d-block"><span class="sr-only">{{ 'process.table.client_cpr'|trans }}</span>{{ process.clientCPR }}</span>
        {% endif %}
        {% if process.client.firstName is defined %}
          <span class="d-block"><span class="sr-only">{{ 'process.table.client_name'|trans }}</span>{{ process.client.firstName }} {{ process.client.lastName }}</span>
        {% endif %}
        {% if process.client.address is defined %}
          <span class="d-block"><span class="sr-only">{{ 'process.table.client_adress'|trans }}</span>{{ process.client.address }}, {{ process.client.postalCode }} {{ process.client.city }}</span>
        {% endif %}
        {% if process.client.telephone is defined %}
          <span class="d-block"><span class="sr-only">{{ 'process.table.client_telephone'|trans }}</span>{{ process.client.telephone }}</span>
        {% endif %}
      </div>
    </div>
  </div>
</div>
