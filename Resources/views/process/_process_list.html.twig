{% block process_list %}
  {% set max_iterations = limit is defined ? min(processes|length, limit) : processes|length %}

  <div class="table-responsive">
    <table class="table table-striped table-hover table-borderless thead-light">
        <thead>
        <tr>
        <th>{{ 'process.table.id'|trans }}</th>
        <th>{{ 'process.table.case_number'|trans }}</th>
        <th>{{ 'process.table.client_cpr'|trans }}</th>
        <th>{{ 'process.table.case_worker'|trans }}</th>
        <th>{{ 'process.table.channel'|trans }}</th>
        <th>{{ 'process.table.process_type'|trans }}</th>
        <th>{{ 'process.table.service'|trans }}</th>
        <th>{{ 'common.table.actions'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for process in processes|slice(0, max_iterations) %}
        <tr>
            <td>{{ process.id }}</td>
            <td>{{ process.caseNumber }}</td>
            <td>{{ process.clientCPR }}</td>
            <td>{{ process.caseWorker }}</td>
            <td>{{ process.channel }}</td>
            <td>{{ process.processType }}</td>
            <td>{{ process.service }}</td>
            <td>
                <a href="{{ path('process_show', {'id': process.id}) }}" class="btn btn-sm btn-primary" data-toggle="tooltip" data-placement="top" title="{{ 'common.actions.show'|trans }}">
                  <i class="fas {{ iconClass('show') }} fa-inverse"></i>
                </a>
                <a href="{{ path('process_edit', {'id': process.id}) }}" class="btn btn-sm btn-primary" data-toggle="tooltip" data-placement="top" title="{{ 'common.actions.edit'|trans }}">
                  <i class="fas {{ iconClass('edit') }} fa-inverse"></i></a>
                </a>
                <a href="{{ path('reminder_index', {'process': process.id}) }}" class="btn btn-sm btn-primary" data-toggle="tooltip" data-placement="top" title="{{ 'process.actions.reminders'|trans }}">
                  <i class="fas {{ iconClass('reminder') }} fa-inverse"></i></a>
                </a>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="8">{{ 'common.no_records_found'|trans }}</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
  </div>
{% endblock %}
