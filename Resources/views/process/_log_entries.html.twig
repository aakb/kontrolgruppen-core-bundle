{% set show = (show is defined) ? show : true %}

<div class="table-responsive">
     <h3>{{ 'process.revision.headline'|trans }}</h3>
     <div class="text-right">
        {{ knp_pagination_render(logEntriesPagination) }}
    </div>


    <table class="table table-hover">
        <thead class="thead-light">
            <tr>
                <th>{{ 'process.revision.table.action'|trans }}</th>
                <th>{{ 'process.revision.table.user'|trans }}</th>
                <th>{{ 'process.revision.table.date'|trans }}</th>
                <th class="text-right">{{ 'process.revision.table.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for log in logEntriesPagination %}
            <tr class="accordion-toggle">
                <td>{{ ('process.revision.table.object_types.' ~ camelCaseToUnderscore((log.logEntry.objectClass|split('\\')|last)))|trans }} {{ ('process.revision.action_type.' ~ (log.logEntry.action|lower))|trans }}</td>
                <td>{{ log.logEntry.username }}</td>
                <td>{{ log.logEntry.loggedAt|date('d/m Y H:i') }}</td>
                <td class="text-right">
                    <a href="#collapse{{ log.logEntry.id }}" class="btn btn-sm btn-dark {% if log.logEntry.data is empty %}disabled{% endif %}" data-toggle="collapse" role="button" aria-expanded="false" aria-controls="collapse{{ log.logEntry.id }}" title="{{ 'process.revision.table.action_view'|trans }}">
                        <i class="fas {{ iconClass('show') }} fa-inverse"></i>
                    </a>
                </td>
            </tr>
            <tr id="collapse{{ log.logEntry.id }}" class="collapse">
                <td colspan="4">
                    <div>
                        {{ include('@KontrolgruppenCore/process/_log_entry.html.twig') }}
                    </div>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

</div>
