{% block process_table %}
  <div id="js-process-spinner" class="spinner-border spinner-border-sm" style="display: none" role="status">
    <span class="sr-only">Loading...</span>
  </div>

  <div class="table-responsive js-process-table-results">
    <table class="table table-striped table-hover table-borderless thead-light">
      <thead>
      <tr>
        <th>{{ knp_pagination_sortable(pagination, 'process.table.case_number'|trans , 'e.caseNumber')|raw }}</th>
        <th>{{ knp_pagination_sortable(pagination, 'process.table.client_cpr'|trans , 'e.clientCPR')|raw }}</th>
        <th>{{ 'process.table.case_worker'|trans }}</th>
        <th>{{ 'process.table.channel'|trans }}</th>
        <th>{{ 'process.table.process_type'|trans }}</th>
        <th>{{ 'process.table.service'|trans }}</th>
        <th class="float-right">{{ 'common.table.actions'|trans }}</th>
      </tr>
      </thead>
      <tbody>
      {% for process in pagination %}
        <tr>
          <td><a href="{{ path('process_show', {'id': process.id}) }}">{{ process.caseNumber }}</a></td>
          <td>{{ process.clientCPR }}</td>
          <td>{{ process.caseWorker }}</td>
          <td>{{ process.channel }}</td>
          <td>{{ process.processType }}</td>
          <td>{{ process.service }}</td>
          <td class="text-right">
            {% include '@KontrolgruppenCore/process/_process_actions.html.twig' %}
          </td>
        </tr>
      {% else %}
        <tr>
          <td colspan="7">{{ 'common.no_records_found'|trans }}</td>
        </tr>
      {% endfor %}
      </tbody>
    </table>

    {#
      {{ pagination.getTotalItemCount }}
    #}

    <div class="navigation">
      {{ knp_pagination_render(pagination) }}
   </div>
  </div>
{% endblock %}
