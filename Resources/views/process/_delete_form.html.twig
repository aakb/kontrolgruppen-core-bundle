<form method="post" action="{{ path('process_delete', {'id': process.id}) }}" onsubmit="return confirm({{ "'" ~ ('common.actions.confirm.delete'|trans) ~ "'" }});">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ process.id) }}">
    <button class="btn">{{ 'common.actions.delete'|trans }}</button>
</form>
