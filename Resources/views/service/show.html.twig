{% extends 'main/index.html.twig' %}

{% block title %}{{ 'service.show.title'|trans }}{% endblock %}

{% block content %}
    <h1>{{ 'service.show.title'|trans }}</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>{{ 'service.table.id'|trans }}</th>
            <td>{{ service.id }}</td>
        </tr>
        <tr>
            <th>{{ 'service.table.name'|trans }}</th>
            <td>{{ service.name }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('service_index') }}">{{ 'common.back_to_list'|trans }}</a>

    <a href="{{ path('service_edit', {'id': service.id}) }}">{{ 'common.actions.edit'|trans }}</a>

  {{ include('service/_delete_form.html.twig') }}
{% endblock %}
